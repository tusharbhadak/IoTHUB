@model IEnumerable<IoTHUB_v1._0.Models.DevicecategoryTbl>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Masteradmin.cshtml";
}
    <p>
        @Html.ActionLink("Create New", "Create", null, null, new { @class = "btn btn-primary" })
    </p>
    <div class="card">
        <div class="card-header">
            <div class="card-title">
                Device Category
            </div>
        </div>       
        <div>
            <form method="get" asp-action="Index">
                <p>
                    <input type="search" placeholder="Enter device category Name..." value="@ViewData["GetDeviceCatDetails"]" name="DeviceCatsearch" style="width:600px;" />
                    <input type="submit" value="Search" class="btn btn-primary" />
                </p>
            </form>
        </div>

        <div class="card-body col-md-12">
            <table id="DevicecategoryTbl" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>
                            Device Category Name
                        </th>
                        <th>
                            Created Date
                        </th>

                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => item.Devicecatname)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Createddate)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.DevicecatId"
                                   class="btn btn-info">
                                    <i class="glyphicon glyphicon-pencil"></i>  Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.DevicecatId" class="btn btn-danger">
                                    <i class="glyphicon glyphicon-trash"></i>  Delete
                                </a>
                                <a asp-action="Details" asp-route-id="@item.DevicecatId" class="btn btn-primary">
                                    <i class="glyphicon glyphicon-trash"></i>  Details
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>




            </table>
        </div>
        <div class="card-footer">

        </div>
    </div>

