@model IEnumerable<IoTHUB_v1._0.Models.ServiceTbl>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Masteradmin.cshtml";
}


<div class="panel panel-primary">
    <div class="panel-heading panel-head"><h1>Services</h1></div>
    <div class="panel-body">
        <div class="btn-group">
            <a asp-action="Create" class="btn btn-primary">
                <i class="glyphicon glyphicon-plus"></i> Add Service
            </a>
        </div>
        <table class="table table-bordered table-striped table-condensed">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Servicename)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Createddate)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Servicename)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Createddate)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ServiceId"
                           class="btn btn-info">
                            <i class="glyphicon glyphicon-pencil"></i>  Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.ServiceId" class="btn btn-danger">
                            <i class="glyphicon glyphicon-trash"></i>  Delete
                        </a>
                        <a asp-action="Details" asp-route-id="@item.ServiceId" class="btn btn-primary">
                            <i class="glyphicon glyphicon-trash"></i>  Details
                        </a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>


