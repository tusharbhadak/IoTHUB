@model IEnumerable<IoTHUB_v1._0.Models.UserTbl>

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/Masteradmin.cshtml";
}


<div class="panel panel-primary">
    <div class="panel-heading panel-head"><h1>Users</h1></div>
    <div class="panel-body">
        <div class="btn-group">
            <a asp-action="Create" class="btn btn-primary">
                <i class="glyphicon glyphicon-plus"></i>  Add User
            </a>
        </div>
        <table class="table table-bordered table-striped table-condensed">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Username)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Companyname)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Companyemail)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Isactive)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        <img src="~/images/@item.Mediapath"
                             class="rounded-circle"
                             height="40" width="40"
                             asp-append-version="true" />
                        @item.Username
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <th>
                        @Html.DisplayFor(modelItem => item.Companyname)
                    </th>
                    <th>
                        @Html.DisplayFor(modelItem => item.Companyemail)
                    </th>
                    <th>
                        @Html.DisplayFor(modelItem => item.Isactive)
                    </th>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.UserId"
                           class="btn btn-info">
                            <i class="glyphicon glyphicon-pencil"></i>  Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.UserId" class="btn btn-danger">
                            <i class="glyphicon glyphicon-trash"></i>  Delete
                        </a>
                        <a asp-action="Details" asp-route-id="@item.UserId" class="btn btn-primary">
                            <i class="glyphicon glyphicon-trash"></i>  Details
                        </a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
