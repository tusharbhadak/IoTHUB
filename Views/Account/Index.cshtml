@model IEnumerable<IoTHUB_v1._0.Models.UserTbl>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Masteradmin.cshtml";
}


<div class="panel panel-primary">
    <div class="panel-heading panel-head"><h1>Clients</h1></div>
    <div class="panel-body">
        <div class="btn-group">
            <a asp-action="Create" class="btn btn-primary">
                <i class="glyphicon glyphicon-plus"></i>  Add Client
            </a>
        </div>
        <div>
            <form method="get" asp-action="Index">
                <p>
                    <input type="search" placeholder="Enter UserName or Email or Company name..." value="@ViewData["GetUserDetails"]" name="usersearch" style="width:600px;" />
                    <input type="submit" value="Search" class="btn btn-primary" />
                </p>
            </form>
        </div>
        <table class="table table-bordered table-striped table-condensed">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Username)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PhoneNo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Address)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Companyname)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Companyemail)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Isactive)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Username)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PhoneNo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Companyname)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Companyemail)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Isactive)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.UserId"
                               class="btn btn-info">
                                <i class="glyphicon glyphicon-pencil"></i>  Edit
                            </a>

                            <a asp-action="Details" asp-route-id="@item.UserId" class="btn btn-primary">
                                <i class="glyphicon glyphicon-trash"></i>  Details
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

